{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@models/*": ["models/*"],
      "@core/*": ["core/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["src"]
}
